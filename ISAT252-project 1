<script>

function displayKPL()
{
var x=document.getElementById("mpg").value;
var y=x * 0.425;
kpl.value=y;
}

function displayMPG()
{
var a=document.getElementById("kplTWO").value;
var b=a / 0.425;
var c=b.toFixed(2);
mpgTWO.value=c;
}
</script>
